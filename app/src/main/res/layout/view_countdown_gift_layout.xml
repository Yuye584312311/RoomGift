<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/view_progress_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:clipChildren="false"
        android:clipToPadding="false">
        <com.amazon.kindle.gift.view.CircleTextProgressbar
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/view_circle_progress"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/view_circle_gift_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:clipToPadding="false"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gift_card_level_three_n_a"
                android:paddingTop="3.5dp"/>
            <TextView
                android:id="@+id/view_circle_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/view_tv_monery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:singleLine="true"
        android:maxLength="10"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:includeFontPadding="false"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gift_room_avatar_bg"
        android:drawableLeft="@drawable/ic_gift_board_money"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:text="--"/>
</LinearLayout>