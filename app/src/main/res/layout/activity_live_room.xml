<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--画面渲染-->
    <com.android.live.player.lib.view.VideoPlayerTrack
        android:id="@+id/video_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:videoPlayerCreateDefaultController="true"
        app:videoPlayerBackgroundColor="#000000"
        android:layout_gravity="center" />
    <!--直播间控制器-->
    <com.android.gift.room.view.VideoLiveControllerView
        android:id="@+id/live_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>