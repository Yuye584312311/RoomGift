<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F7FA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.gift.view.CommentTitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:commentTitle="iLive"
                app:commentTitleStyle="1"
                app:commentShowBack="false"
                app:commentBackGroundRes="@drawable/bg_title"
                android:id="@+id/title_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_home_logo_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_chat_server"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>
                <LinearLayout
                    android:id="@+id/re_search_bar"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_input">
                    <ImageView
                        android:id="@+id/iv_home_search_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/iv_icon_search"
                        android:padding="5dp"
                        android:background="?attr/selectableItemBackground"/>
                    <TextView
                        android:id="@+id/tv_auto_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:textColor="#929292"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:layout_gravity="center_vertical"
                        android:text="冯迪莫"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/btn_histroy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_histroy"
                    android:layout_alignParentRight="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"/>
            </LinearLayout>
        </FrameLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_refresh">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:id="@+id/recycler_view"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <!--占位BTN-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp">
        <View
            android:id="@+id/globe_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_direction_left"
            android:scaleType="center"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/globe_view"
            android:clipToPadding="false"/>
        <ImageView
            android:id="@+id/btn_top"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_direction_top"
            android:scaleType="center"
            android:layout_above="@id/globe_view"
            android:layout_centerHorizontal="true"
            android:clipToPadding="false"/>
        <ImageView
            android:id="@+id/btn_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_direction_right"
            android:scaleType="center"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/globe_view"
            android:clipToPadding="false"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="松手打开礼物面板"
        android:textColor="#FF0000"
        android:textSize="17dp"
        android:background="@drawable/tip_game"
        android:layout_gravity="center"
        android:visibility="invisible"/>
    <!--圆形菜单-->
    <com.android.gift.room.view.RoundGlobeView
        android:id="@+id/btn_move_view"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:background="@drawable/arice_dot_red"
        android:visibility="invisible"/>
</FrameLayout>