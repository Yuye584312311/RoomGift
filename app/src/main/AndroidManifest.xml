<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amazon.kindle">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!--请求安装APK权限-->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    <!--DownloadManager-->
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER"/>

    <application
        android:name="com.amazon.kindle.APPLication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.amazon.kindle.index.ui.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--示例直播间-->
        <activity android:name="com.amazon.kindle.room.activity.LiveRoomActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <!--关于-->
        <activity android:name="com.amazon.kindle.index.ui.activity.AboutActivity"
            android:screenOrientation="portrait"/>
        <!--WEB-VIEW-->
        <activity android:name="com.amazon.kindle.index.ui.activity.WebViewActivity"
            android:screenOrientation="portrait"/>

        <!--APK下载-->
        <service android:name="com.amazon.kindle.service.DownLoadService"
            android:exported="false"/>
    </application>

</manifest>