<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_black_shape_ungratien"
    android:paddingBottom="10dp">
    <View
        android:id="@+id/view_top_bar_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:id="@+id/top_room_data"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <!--左边用户信息-->
        <RelativeLayout
            android:id="@+id/rl_anchorInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:background="@drawable/gift_bg_live_user_data">
            <ImageView
                android:id="@+id/view_anchor_head"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:background="@drawable/bg_anchor_user_head_shape"
                android:layout_centerVertical="true" />
            <LinearLayout
                android:layout_toRightOf="@+id/view_anchor_head"
                android:id="@+id/ll_user_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <!--主播昵称、计时-->
                <com.android.gift.view.MarqueeTextView
                    android:id="@+id/view_anchor_name"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#FFFFFF"
                    android:ellipsize="marquee"
                    android:textSize="12dp"
                    android:text="刘亦菲"/>
                <!--在线人数-->
                <TextView
                    android:id="@+id/view_anchor_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#FFFFFF"
                    tools:text="0"
                    android:gravity="center"
                    android:textSize="9dp" />
            </LinearLayout>
            <TextView
                android:layout_toRightOf="@+id/ll_user_data"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:background="@drawable/arice_dot_style"/>
        </RelativeLayout>
        <!--中间粉丝头像-->
        <FrameLayout
            android:id="@+id/fans_root_view"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">
        </FrameLayout>
        <!--在线人数-->
        <com.android.gift.view.ShapeTextView
            android:id="@+id/view_online_number"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="0"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_marginLeft="5dp"
            android:includeFontPadding="false"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:text="1.0万"
            app:shapeBackgroundColor="#4D000000"
            app:shapeBackgroundSelectorColor="#99000000"
            app:shapeRadius="30dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/view_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_room_data"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:includeFontPadding="false"
        android:drawableLeft="@drawable/ic_room_monery"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:background="@drawable/gift_bg_live_user_data"
        android:text="亲密度:1000万"/>
</LinearLayout>