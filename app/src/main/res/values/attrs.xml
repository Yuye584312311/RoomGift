<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TabLayout字体样式-->
    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--ShapeButton-->
    <declare-styleable name="ShapeTextView">
        <!--Button圆角-->
        <attr name="shapeRadius" format="dimension"></attr>
        <!--边框宽度-->
        <attr name="shapeStrokeWidth" format="dimension"></attr>
        <!--边框颜色-->
        <attr name="shapeStrokeColor" format="color"></attr>
        <!--背景颜色-->
        <attr name="shapeBackgroundColor" format="color"></attr>
        <!--背景按下的颜色-->
        <attr name="shapeBackgroundSelectorColor" format="color"></attr>
    </declare-styleable>
    <!--背景虚化-->
    <declare-styleable name="MusicBackgroungBlurView">
        <attr name="blurBlurRadius" format="dimension"/>
        <attr name="blurDownsampleFactor" format="float"/>
        <attr name="blurOverlayColor" format="color"/>
        <attr name="blurFramRadius" format="dimension"/>
        <attr name="blurTopLeft" format="boolean"/>
        <attr name="blurTopRight" format="boolean"/>
        <attr name="blurBottomLeft" format="boolean"/>
        <attr name="blurBottomRight" format="boolean"/>
    </declare-styleable>
    <!--进度条-->
    <declare-styleable name="CircleTextProgressbar">
        <attr name="in_circle_color" format="color" />
    </declare-styleable>
    <!--礼物倒计时-->
    <declare-styleable name="CountdownGiftView">
        <!--倒计时按钮，一圈耗时，单位秒-->
        <attr name="count_durtion" format="integer" />
    </declare-styleable>
    <!--自定义圆环-->
    <declare-styleable name="CircleProgressView">
        <!--进度条背景颜色-->
        <attr name="circle_progress_bg_color" format="color"></attr>
        <!--进度条圆环背景颜色-->
        <attr name="circle_progress_cir_bg_color" format="color"></attr>
        <!--进度条颜色-->
        <attr name="circle_progress_color" format="color"></attr>
        <!--进度条文字颜色-->
        <attr name="circle_progress_text_color" format="color"></attr>
        <!--进度条文字大小-->
        <attr name="circle_progress_text_size" format="dimension"></attr>
        <!--进度条宽度-->
        <attr name="circle_progress_stroke_width" format="dimension"></attr>
        <!--是都显示文字-->
        <attr name="circle_progress_show_text" format="boolean"></attr>
        <!--最大进度阈值-->
        <attr name="circle_progress_max" format="integer"></attr>
    </declare-styleable>
    <!-- 飘星自定义属性 -->
    <declare-styleable name="HeartLayout">
        <attr name="initX" format="dimension" />
        <attr name="initY" format="dimension" />
        <attr name="xRand" format="dimension" />
        <attr name="animLengthRand" format="dimension" />
        <attr name="xPointFactor" format="dimension" />
        <attr name="animLength" format="dimension" />
        <attr name="heart_width" format="dimension" />
        <attr name="heart_height" format="dimension" />
        <attr name="bezierFactor" format="integer" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>
    <!--自定义圆角ImageView-->
    <declare-styleable name="RoundImageView">
        <attr name="roundShape" format="enum">
            <enum name="rect" value="1"/>
            <enum name="circle" value="2"/>
            <enum name="oval" value="3"/>
        </attr>
        <attr name="roundRadius" format="dimension"/>
        <attr name="roundBorderSize" format="dimension"/>
        <attr name="roundBorderColor" format="color"/>
        <attr name="roundScaleType" format="enum">
            <enum name="centerInside" value="1"/>
            <enum name="centerCrop" value="2"/>
            <enum name="fitXY" value="3"/>
        </attr>
    </declare-styleable>
    <!--Title-->
    <declare-styleable name="CommentTitleView">
        <attr name="commentTitle" format="string" />
        <attr name="commentTitleColor" format="color" />
        <attr name="commentTitleSize" format="dimension"></attr>
        <attr name="commentSubTitle" format="string" />
        <attr name="commentSubTitleColor" format="color" />
        <attr name="commentSubTitleSize" format="dimension"></attr>
        <attr name="commentBackRes" format="reference" />
        <attr name="commentBackGroundRes" format="reference" />
        <attr name="commentShowBack" format="boolean" />
        <attr name="commentMenuRes" format="reference" />
        <!--标题栏风格，状态栏 0：白底黑字 1：彩底白字-->
        <attr name="commentTitleStyle" format="integer" />
    </declare-styleable>
</resources>