<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:clipChildren="false"
    android:clipToPadding="false">
    <LinearLayout
        android:id="@+id/re_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false">
        <LinearLayout
            android:id="@+id/gift_item_bg"
            android:layout_width="159dp"
            android:layout_height="39dp"
            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:background="@drawable/gift_item_bg_shape">
            <!--
            android:background="@drawable/bg_gift_item_animation_shape"
            android:background="@drawable/gift_item_bg_shape"
            -->
            <!--用户头像-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:id="@+id/view_room_user_icon"
                android:layout_marginRight="5dp">
                <ImageView
                    android:id="@+id/view_gift_user_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:padding="1.5dp"
                    android:background="@drawable/bg_user_head_shape" />
            </RelativeLayout>
            <!--用户信息-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <com.amazon.kindle.view.MarqueeTextView
                    android:id="@+id/view_tv_gift_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:id="@+id/view_tv_gift_namelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送 "
                        android:maxLength="2"
                        android:textSize="10dp"
                        android:textColor="#FFF9F9F9"/>
                    <com.amazon.kindle.view.MarqueeTextView
                        android:id="@+id/view_tv_gift_desp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-qde -"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--礼物ICON-->
            <ImageView
                android:id="@+id/view_iv_gift_icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <ImageView
            android:id="@+id/view_gift_num_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gift_numx" />
        <com.amazon.kindle.gift.view.GiftGradualTextView
            android:id="@+id/view_gift_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:textStyle="italic"/>
    </LinearLayout>
    <!--小倍率中奖-->
    <com.amazon.kindle.gift.view.GiftDrawSmallMulitAnimationView
        android:id="@+id/tv_draw_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:layout_marginLeft="55dp"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:shadowColor="#AD0000"
        android:layout_gravity="bottom"
        android:layout_marginBottom="12dp"/>
    <!--大倍率中奖-->
    <com.amazon.kindle.gift.view.GiftDrawBigMulitAnimationView
        android:id="@+id/view_draw_icon"
        android:layout_width="167dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:visibility="invisible"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:antiAlias="true"/>
</FrameLayout>